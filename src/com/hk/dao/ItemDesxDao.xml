<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.hk.dao.ItemDescDao">
        <!-- 根据商品id查询商品信息 -->
        <select id="findItemDescByItemId" parameterType="Long" resultType="ItemDesc">
           select * from tb_item_desc where itemId=#{itemId};
        </select>
  </mapper>
